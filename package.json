{
  "name": "live-keys",
  "version": "1.0.0",
  "description": "A minimalist, localhost-only key server for building in public.",
  "main": "dist/server.js",
  "bin": {
    "check-keys": "./scripts/check-keys.js",
    "status": "./scripts/status.js",
    "key-commands": "./scripts/commands.js"
  },
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "setup": "node scripts/setup.js",
    "postinstall": "node scripts/setup.js",
    "check-keys": "node scripts/check-keys.js",
    "status": "node scripts/status.js",
    "stream:on": "node scripts/toggle.js on",
    "stream:off": "node scripts/toggle.js off",
    "stream:toggle": "node scripts/toggle.js",
    "key-commands": "node scripts/commands.js"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
